<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <!-- 欢迎页 -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <!-- 配置servelt -->
    <servlet>
        <!-- servlet别名 -->
        <servlet-name>sf</servlet-name>
        <!-- sevlet类完整路径 -->
        <servlet-class>main.servlet.StaffServlet</servlet-class>
    </servlet>
    <!-- 配置servlet映射 -->
    <servlet-mapping>
        <servlet-name>sf</servlet-name>
        <!-- 设置servlet匹配路径，*表示可以匹配所有路径 -->
        <url-pattern>/StaffServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>dept</servlet-name>
        <servlet-class>main.servlet.DeptServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>dept</servlet-name>
        <url-pattern>/DeptServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>page</servlet-name>
        <servlet-class>main.servlet.PageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>page</servlet-name>
        <url-pattern>/PageServlet</url-pattern>
    </servlet-mapping>

    <!-- 过滤器 -->
    <filter>
        <!-- 指定filter类的别名-->
        <filter-name>character</filter-name>
        <!-- 指定filter类的完整包路径 -->
        <filter-class>main.filter.CharacterEncodingFilter</filter-class>
    </filter>
    <!-- 过滤器映射 -->
    <filter-mapping>
        <filter-name>character</filter-name>
        <!-- 指定filter的拦截路径 -->
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <!-- 指定filter类的别名-->
        <filter-name>login</filter-name>
        <!-- 指定filter类的完整包路径 -->
        <filter-class>main.filter.LoginFilter</filter-class>
    </filter>
    <!-- 过滤器映射 -->
    <filter-mapping>
        <filter-name>login</filter-name>
        <!-- 指定filter的拦截路径 -->
        <url-pattern>/Servlet</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>login</filter-name>
        <!-- 指定filter的拦截路径 -->
        <url-pattern>/PageServlet</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>login</filter-name>
        <!-- 指定filter的拦截路径 -->
        <url-pattern>/DeptServlet</url-pattern>
    </filter-mapping>

    <!-- 监听器 -->
<!--    <listener>-->
<!--        <listener-class>main.listener.MyListener</listener-class>-->
<!--    </listener>-->
</web-app>